extends ../layout/layout 

block content
    div#videoContainer
        video(src="/" + video.fileUrl)
        div#videoContorller
            button#play Play
            button#mute Mute
            span#time 00:00/00:00
            input(type="range", value=0.5,  min="0", max="1", step=0.1)#volume
            div 
                span#currentTime 00:00
                span  / 
                span#totalTime 00:00
            div 
                input(type="range", value=0,  min="0", step=1)#timeLine
            div
                button#fullScreen Enter Full Screen
//-
    p=video.description 
    small=video.createdAt
    br
    small Upload by 
        a(href=`/user/${video.owner._id}`)=video.owner.name
    ul 
    each hashtags in video.hashtags
        li=hashtags
    if String(video.owner._id) === String(loggedInUser._id)
        div
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;


block scripts
    script(src="/assets/js/videoPlayer.js")