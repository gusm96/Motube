extends ../layout/layout 

block content 
    if errorMessage 
    span=errorMessage
    img(src="/" + loggedInUser.avatarUrl, width="100", height="100")
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(type="text", placeholder="Name", name="name", required, value=loggedInUser.name)
        input(type="text", placeholder="User Name", name="username", required, value=loggedInUser.username)
        input(type="email", placeholder="E-mail", name="email", required, value=loggedInUser.email)
        input(type="text", placeholder="Location", name="location", value=loggedInUser.location)
        input(type="submit" value="Update Profile")
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password &rarr;
