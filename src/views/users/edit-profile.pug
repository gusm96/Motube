extends ../layout/layout 

block content 
    if errorMessage 
    span=errorMessage
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(type="text", placeholder="Name", name="name", required, value=loggedInUser.name)
        input(type="text", placeholder="User Name", name="username", required, value=loggedInUser.username)
        input(type="email", placeholder="E-mail", name="email", required, value=loggedInUser.email)
        input(type="text", placeholder="Location", name="location", value=loggedInUser.location)
        input(type="submit" value="Update Profile")
        if !loggedInUser.socialOnly
             div.edit-profile__password
                a(href="change-password") Change Password &rarr; 
